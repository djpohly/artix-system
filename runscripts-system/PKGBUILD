package_lvm2-runscripts() {
    pkgdesc="Run script for lvm2"
    depends=('device-mapper-openrc' 'lvm2')


    for f in lvm lvm-monitoring lvmetad; do
        _inst_sv "$f"
    done
}

package_mdadm-runscripts() {
    pkgdesc="Run script for mdadm"
    depends=('mdadm')

    for f in mdadm mdraid;do
        _inst_sv $f
    done
}

